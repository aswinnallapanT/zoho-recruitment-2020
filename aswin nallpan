#include<stdio.h>
#include<string.h>
#include<math.h>


int main(){

char a[100];

scanf("%s",a);
int n=strlen(a);
int mid=n/2;
int m=0;


for(int i=0;i<n;i++){
  
  for(int space=0;space<n-i-1;space++) printf("  ");
  
  for(int j=0;j<=i;j++){
    
    if(mid<n) printf("%c ",a[mid++]);
    else printf("%c ",a[m++]);
  }
  
  mid=n/2;
  m=0;
  printf("\n");
}



return 0;
WELCOME
